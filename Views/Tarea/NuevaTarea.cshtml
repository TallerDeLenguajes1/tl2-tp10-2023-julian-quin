@using tl2_tp10_2023_julian_quin.ViewModels
@model CrearTareaViewModel
<h2>Crear Tarea</h2>
<nav class="mb-4" style="margin-right: 10vw;">
    <ul class="list-unstyled" >
        <li class="d-inline-block"  style="margin-left: 340px;">
            <a class="btn btn-secondary" role="button" aria-pressed="true" asp-controller="Tablero" asp-action="Index" style="color: rgb(255, 255, 255); background-color:rgb(117, 117, 117);">Volver</a>
        </li>
    </ul>
</nav>
<form class="forms_Crear" asp-controller="Tarea" asp-action ="NuevaTarea"> 
    
    <div class="form-group">
        <label asp-for="@Model.IdTablero">Tablero</label>
        <select asp-for="@Model.IdTablero" class="form-control">
        <option value="" selected>Seleccionar</option>
        @foreach (var tablero in Model.Tableros)
        {
            <option value="@tablero.Id">@tablero.Nombre</option>
        }
        </select>
        <span asp-validation-for="@Model.IdTablero" class="text-danger"></span>   
    </div>
  
    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre</label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion</label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>
    <div class="form-group">
    <label asp-for="@Model.Color">Color</label>
        <select asp-for="@Model.Color" class="form-control">
            <option value="ninguno">ninguno</option>
            <option value="rojo">Rojo</option>
            <option value="naranja">Naranja</option>
            <option value="amarillo">Amarillo</option>
            <option value="verde">Verde</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado">Estado</label>
        <select asp-for="@Model.Estado" class="form-control">
            @foreach (var tipo in Enum.GetValues(typeof(EstadoTarea)))
            {
                <option value="@tipo">@tipo</option>
            }
        </select>
        <span asp-validation-for="@Model.Estado" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="@Model.IdUsuarioAsignado">Asignar usuario</label>
        <select asp-for="@Model.IdUsuarioAsignado" class="form-control">
            <option value="">sin Asignar</option>
            @foreach (var usuario in Model.Usuarios)
            {
                <option value="@usuario.Id">@usuario.NombreDeUsuario</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Crear</button>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }