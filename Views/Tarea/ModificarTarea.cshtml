@using tl2_tp10_2023_julian_quin.ViewModels
@model ModificarTareaViewModel
<h2>Modificar Tarea</h2>

<form asp-controller="Tarea" asp-action ="ModificarTarea"> 
    <input hidden asp-for="@Model.Id"> @*si borro esto, sucede que al endpoint [post] no llega el id, y si lo dejo y no pongo el hidden lo expongo*@
    <input hidden asp-for="@Model.IdUsuarioAsignado">
     <div class="form-group">
        <label asp-for="@Model.IdTablero">Tablero</label>@*muestra el nombre*@
        <select asp-for="@Model.IdTablero"class="form-control"> @*muestra la caja donde se escribe o selecciona*@
        @foreach (var tablero in Model.Tableros)
        {
            <option value="@tablero.Id">@tablero.Nombre</option>
        }
        </select>
        <span asp-validation-for="@Model.IdTablero" class="text-danger"></span>   
    </div>

    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre</label>
        <input asp-for="@Model.Nombre" class="form-control"/>
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion</label>
        <input asp-for="@Model.Descripcion" class="form-control" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color">Color</label>
        <input asp-for="@Model.Color" class="form-control" />
        <span asp-validation-for="@Model.Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Estado">Estado</label>
        <input asp-for="@Model.Estado" class="form-control" />
        <span asp-validation-for="@Model.Estado" class="text-danger"></span>
    </div>
  
    <button type="submit" class="btn btn-success">Modificar</button>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }