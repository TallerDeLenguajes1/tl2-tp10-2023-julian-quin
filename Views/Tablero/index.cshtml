@using tl2_tp10_2023_julian_quin.ViewModels
@model IndexTableroViewModel

<h2>Lista de Tableros</h2>
<table class="table table-dark">
    <thead>
        <tr>
            <th hidden>Id</th>
            <th>Id Propietario</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tablero in Model.tableros)
        {
            <tr>
                <td hidden>@tablero.Id</td>
                <td>@tablero.IdUsuarioPropietario</td>
                <td>@tablero.Nombre</td>
                <td>@tablero.Descripcion</td>
                <td>
                    <a asp-controller="Tablero" asp-action="ModificarTablero" asp-route-idTablero ="@tablero.Id">Editar</a>    @*asp-route-idUsuario // permite mandar el id hacia el get de Modificar (ya que necesita del parametro idUsuario) y asi mostrar el formulario completo de acuerdo al usuario que se cliquee en la tabla de momento para modificar*@
                    <a asp-controller="Tablero" asp-action="EliminarTablero" asp-route-idTablero="@tablero.Id" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>
                    <a asp-controller="Tarea" asp-action="Index" asp-route-idTablero ="@tablero.Id" >Ver Tareas</a>
                </td>
            </tr>
        }
    </tbody>
</table>